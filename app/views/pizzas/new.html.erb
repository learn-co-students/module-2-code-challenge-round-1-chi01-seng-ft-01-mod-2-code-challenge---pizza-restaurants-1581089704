<h1>New Pizza!</h1> <br>
<% if @pizza.errors.any? %>
<%= @pizza.errors.full_messages %>
<% end %>

<%= form_for @pizza do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :ingredients %>
    <%= f.text_area :ingredients %>
    <%= f.label :new_restaurants %>
    <%= f.collection_select :restaurants, @restaurants, :name, :name %>
    <%= f.submit "Save Pizza" %>
<% end %>